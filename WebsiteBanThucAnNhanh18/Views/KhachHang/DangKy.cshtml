@model WebsiteBanThucAnNhanh18.ViewModels.CustomerRegisterVM
@{
	ViewData["Title"] = "Đăng ký";
}
@if (ViewBag.RegisterFail != null || ViewBag.Registersuccess != null)
{
	<h1>@ViewBag.RegisterFail</h1>
	<h1>@ViewBag.Registersuccess</h1>
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Đăng ký Thành viên</h1>
		@if (ViewBag.RegisterFail != null)
		{
			<h3 style="color: red">@ViewBag.RegisterFail</h3>
		}
		<form asp-action="DangKy">
			<div class="row">
				<div class="row">
					<div class="col-md-12 col-lg-6">
						<div class="form-item w-100">
							<label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
							<input asp-for="@Model.Username" class="form-control">
							<span asp-validation-for="@Model.Username" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-12 col-lg-6">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.Password" class="form-control">
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Fullname"></label><sup>*</sup>
						<input asp-for="@Model.Fullname" class="form-control" />
						<span asp-validation-for="@Model.Fullname" class="text-danger"></span>
					</div>					
					<div class="d-flex align-items-center my-3">
						<span class="me-2">Giới tính:</span>
						<div class="form-check me-3">
							<input asp-for="@Model.Gender" class="form-check-input" type="radio" name="Gender" value="true" id="Male" checked>
							<label class="form-check-label" for="Male">Nam</label>
						</div>
						<div class="form-check">
							<input asp-for="@Model.Gender" class="form-check-input" type="radio" name="Gender" value="false" id="Female">
							<label class="form-check-label" for="Female">Nữ</label>
						</div>
					</div>
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Bod"></label>
						<input asp-for="@Model.Bod" class=" form-control" />
						<span asp-validation-for="@Model.Bod" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
						<input asp-for="@Model.Address" class="form-control" />
						<span asp-validation-for="@Model.Address" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Phone"></label><sup>*</sup>
						<input asp-for="@Model.Phone" class="form-control" />
						<span asp-validation-for="@Model.Phone" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
						<input asp-for="@Model.Email" class="form-control" />
						<span asp-validation-for="@Model.Email" class="text-danger"></span>
					</div>


				</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
				</div>
			</div>
		</form>
	</div>
</div>