@model WebsiteBanThucAnNhanh18.ViewModels.CustomerProfileVM
@{
    ViewData["Title"] = "Profile";
}
@if (Context.User.Identity.IsAuthenticated)
{
    <h1>Profile</h1>
    <div class="container">
        <h2>Xin chào @Context.User.Identity.Name !</h2>

    </div>
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="https://pbs.twimg.com/profile_images/1283672176/Popeyes3_400x400.jpg"
                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                <h5>@Model.Fullname</h5>
                                <p style="color:black"> Username: @Model.Username </p>
                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Thông tin khách hàng</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Model.Email</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Điện thoại</h6>
                                            <p class="text-muted">@Model.Phone</p>
                                        </div>
                                    </div>
                                    <h6> </h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Ngày sinh</h6>
                                            <p class="text-muted">@Model.Bod?.ToShortDateString()</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Giới tính</h6>
                                            <p class="text-muted">@(Model.Gender == true ? "Nam" : "Nữ")</p>
                                        </div>
                                    </div>
                                    <hr class="mt-0 mb-4">
                                    <div> 
                                        <h6>Địa chỉ:</h6>
                                        <p class="text-muted" >@Model.Address</p>
                                    </div>
                                    <div class="d-flex justify-content-start">
                                        <a asp-controller="KhachHang" asp-action="LichSu" class="btn btn-primary">Xem lịch sử mua hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

