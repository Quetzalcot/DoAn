<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8"> 
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <div>
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
      
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="~/" class="navbar-brand"><h1 class="text-primary display-6">Popeyes</h1></a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a href="~/" class="nav-item nav-link active">Trang chủ</a>
                            <a asp-action="Index" asp-controller="DoAn"  class="nav-item nav-link">Thực Đơn</a>
                            
                         @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-action="DangKy" asp-controller="KhachHang" class="nav-item nav-link">Đăng ký</a>
                            }
                            <a asp-action="Index" asp-controller="Branch" class="nav-item nav-link">
                                <p><span class="fas fa-map-marker-alt"></span><span> Cửa Hàng</span></p>
                            </a>
                           
                        </div>
                       @* <div class="theader-button">
                            <a asp-action="Branch" asp-controller="ChiNhanh" class="location">
                                <p><span class="fas fa-map-marker-alt"></span><span>Hệ thống</span><br><span style="margin-left: 0.65em">Cửa Hàng</span></p>
                            </a>
                        </div>*@
                        <div class="d-flex m-3 me-0 align-items-center">
                            <a asp-action="ListCart" asp-controller="Cart" class="position-relative me-4 my-auto" style="margin-right: 20px;">
                                <i class="fa fa-cart-plus fa-2x" style="position: relative;"></i>
                                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -10px; left: 15px; height: 20px; min-width: 20px;">@ViewBag.SL</span>
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Profile" asp-controller="KhachHang" class="d-flex align-items-center" title="Thông tin khách hàng" style="margin-right: 20px;">
                                    <i class="fas fa-id-card fa-2x mr-2"></i>
                                    <p class="mb-0">@Context.User.Identity.Name</p>
                                </a>
                                <a asp-action="DangXuat" asp-controller="KhachHang" class="my-auto" style="margin-right: 20px;">
                                    <i class="fas fa-sign-out-alt"></i> Đăng Xuất
                                </a>
                                <a asp-controller="KhachHang" asp-action="LichSu" class="history-link" style="margin-right: 20px;">
                                    <i class="fas fa-history"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-action="DangNhap" asp-controller="KhachHang" class="my-auto" title="Đăng nhập" style="margin-right: 20px;">
                                    <i class="fas fa-user-circle fa-2x"></i>
                                </a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
        
        <div style="min-height:50px;">
            @RenderBody()
        </div>
       

        @await Html.PartialAsync("_Footer")
    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>
</html>
