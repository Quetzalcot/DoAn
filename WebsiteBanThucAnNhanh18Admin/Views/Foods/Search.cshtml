@model IEnumerable<WebsiteBanThucAnNhanh18Admin.Models.FoodsModel>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idx)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                    <img src=@("https://localhost:7224" + item.Picture) width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idx)
            </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.FoodId" style="color: #fff; background-color: #28a745; padding: 5px 10px; border-radius: 5px;">
                        <i class="fas fa-edit"></i> Edit
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.FoodId" style="color: #fff; background-color: #dc3545; padding: 5px 10px; border-radius: 5px;">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
